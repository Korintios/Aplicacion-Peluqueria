// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["jsonProtocol"]
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL_PRISMA_URL") // uses connection pooling
  directUrl = env("DATABASE_URL_URL_NON_POOLING") // uses a direct connection
  shadowDatabaseUrl = env("DATABASE_URL_URL_NON_POOLING") // used for migrations
}

model Reception {
  receptionId Int @id @default(autoincrement())
  clientName  String
  clientCc    String
  services    Service[] 
  isPaid      Boolean @default(false)
  dateCreated DateTime @default(now()) 
}

model Service {
  reception   Reception @relation(fields: [receptionId], references: [receptionId], onDelete: Cascade)
  receptionId Int
  serviceId   Int    @id @default(autoincrement())
  serviceName String
  servicePrice Int
  stylistName   String
  serviceDate DateTime @default(now())
}

model Stylist {
  stylistId   Int @id @default(autoincrement())
  stylistName String
}